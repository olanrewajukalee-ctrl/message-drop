{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/register", "dest": "/api/register" },
    { "src": "/api/login", "dest": "/api/login" },
    { "src": "/api/logout", "dest": "/api/logout" },
    { "src": "/api/me", "dest": "/api/me" },
    { "src": "/api/init-db", "dest": "/api/init-db" },
    { "src": "/api/drops/mine", "dest": "/api/drops-mine" },
    { "src": "/api/drops/messages", "dest": "/api/drops-messages" },
    { "src": "/api/drops", "dest": "/api/drops" },
    {
      "src": "/api/drop/(.*)/autocomplete",
      "dest": "/api/drop/[username]/autocomplete"
    },
    { "src": "/api/drop/(.*)/check", "dest": "/api/drop/[username]/check" },
    { "src": "/api/drop/(.*)", "dest": "/api/drop/[username]" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
